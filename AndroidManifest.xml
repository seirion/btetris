<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.seirion.btetris"
      android:versionCode="1" android:versionName="1.0.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".BTetrisActivity"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="portrait"
                  android:label="@string/IDS_BTETRIS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".BTetrisPreferenceActivity"
        		  android:theme="@android:style/Theme.NoTitleBar"
        		  android:screenOrientation="portrait"
        		  />
        <activity android:name=".BRecordActivity"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="portrait"
                  />
    </application>
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.WRITE_CONTACTS" /> 
</manifest>